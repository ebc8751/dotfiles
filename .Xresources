URxvt.boldItalicFont: xft:Fira Mono:pixelsize=15,style=bold

!!
!! Xft

Xft.antialias:			 1
Xft.autohint:			 0
Xft.dpi:			 96
Xft.hinting:			 1
Xft.hintstyle:			 hintslight
Xft.lcdfilter:			 lcddefault
Xft.rgba:			 rgb

!!
!! Perl

URxvt.perl-lib:        /home/stayrad/dotfiles/apps/urxvt/plugins
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select

! tabs
URxvt.tabbed.tabbar-bg: -1
URxvt.tabbed.tabbar-fg: -2
URxvt.tabbed.tab-bg: -2
URxvt.tabbed.tab-fg: -1
URxvt.tabbed.title-bg: -1
URxvt.tabbed.title-fg: -2
URxvt.tabbed.autohide: true
URxvt.tabbed.new-button: false
URxvt.tabbed.title: true

! clipboard
URxvt.keysym.M-c:          perl:clipboard:copy
URxvt.keysym.M-v:          perl:clipboard:paste
URxvt.keysym.C-M-v:        perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:   xsel -b
URxvt.clipboard.pastecmd:  xsel -b

! keyboard-select
URxvt.keysym.M-Escape:  perl:keyboard-select:activate
URxvt.keysym.M-s:       perl:keyboard-select:search

! url-select
URxvt.keysym.M-u:            perl:url-select:select_next
URxvt.url-select.autocopy:   true
URxvt.url-select.button:     1
URxvt.url-select.launcher:   /usr/bin/firefox
URxvt.url-select.underline: true

