#
# wm independent hotkeys
#

# terminal emulator
super + space
	urxvt

# floating terminal
super + shift + space
	urxvt
	id=$(bspc query -N -n "focused");\
	if [ -n "$id" ];then \
			xprop -id $id -f _SCRATCH 32ii -set _SCRATCH $(date +%s,%N);\
			bspc node -t "floating";\
			xdotool windowunmap $id;\
	fi

# firefox
super + shift + Return
	firefox

#scrot
super + shift + -
	scrotf

# program launcher
super + Tab
	rofi -show run

# empty space
super + shift + f
	{bspc node -i}

# spacekiller
super + alt + f
	{for win in `bspc query -N -d -n .leaf.!window`; do bspc node $win -k; done}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# refresh or quit bspwm
super + shift + {_,alt + }Escape
	{bspc wm -d | /home/ebc/.scripts/extract_canvas > "$BSPWM_STATE" && bspc quit, \
	 bspc quit 1}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + r
	bspc desktop -l next

# swap the current node and the biggest node
super + b
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {x,shift + x,z,shift + z}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + {alt + z,alt + x,alt + c}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{a,s,w,d}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {e,shift + e, ctrl + e, ctrl + shift + e}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }t
	bspc node -f {next,prev}

# focus the next/previous desktop
super + {n,m}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {shift + n,ctrl + n}
	bspc {desktop,node} -f last

# focus the older or newer node in the focus history
super + {h,shift + h}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {a,s,w,d}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + alt + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Move window into presel position
super + c
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused
#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {a,s,w,d}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + shift + alt + {a,s,w,d}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# Brightness
#

#inc/dec brightness
super + {o,p}
	light -{U,A} 10

#fine inc/dec
super + alt +ss {o,p}
	light -{U,A} 3

#gaps
super + {minus,equal}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5 ))
